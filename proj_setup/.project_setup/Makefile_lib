//insert header

NAME = //insert library name

SRC = src/*

LIB = libft/libft.a

BUILD = gcc -Wall -Werror -Wextra -c

all: $(NAME)
	@$(BUILD) $(NAME) $(SRC) $(LIB)
	@echo "$(NAME) created"

$(NAME):

clean:
	@rm -rf $(NAME)
	@echo "$(NAME) deleted"

fclean: clean
	@make fclean -C libft

re: clean all

RE: fclean all

.PHONY: all clean fclean re RE
